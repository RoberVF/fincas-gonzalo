<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lluvias</title>
    <%- include('../utils/links') %>

</head>
<body class="container">
    <div class="d-flex justify-content-around mt-5">
        <h2>Tratamientos</h2>
        <div class="d-flex align-items-center">
            <a href="/addTratamiento" class="btn btn-success mr-1">Incluir dato</a>
            <a href="/" class="btn btn-danger btn-small">Volver</a>
        </div>
    </div>
    <% tratamiento.forEach((item) => { %>
        <div class="card mt-4">
            <div class="card-header"><%= item.dataQuantity %> Kilos</div>
            <div class="card-body">
                <strong>Lugar:</strong> <%= item.dataPlace %> <br>
                <strong>Fecha:</strong> <%= item.dataYear %> <br>
                <strong>Informacion extra:</strong> <%= item.dataInfo %>
            </div>
        </div>
    <% }) %> 
    <div class="mt-4"></div>
</body>
</html>